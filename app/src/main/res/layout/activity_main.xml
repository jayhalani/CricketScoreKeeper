<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.raj.cricketscorekeeper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        style="@style/ChildLinearLayout">

        <TextView
            style="@style/TeamName"
            android:text="Team A" />

        <TextView
            android:id="@+id/teamascore"
            style="@style/ScoreTextView"
            android:text="0/0" />

        <Button
            style="@style/ScoreButtons"
            android:onClick="addSixForTeamA"
            android:text="+6 Runs" />

        <Button
            style="@style/ScoreButtons"
            android:onClick="addFourForTeamA"
            android:text="+4 Runs" />

        <Button
            style="@style/ScoreButtons"
            android:onClick="addOneForTeamA"
            android:text="+1 Runs" />

        <Button
            style="@style/ScoreButtons"
            android:onClick="addNoBallForTeamA"
            android:text="No Ball" />

        <Button
            style="@style/ScoreButtons"
            android:onClick="wicketForTeamA"
            android:text="Wicket" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        style="@style/ChildLinearLayout">

        <TextView
            style="@style/TeamName"
            android:text="Team B" />

        <TextView
            android:id="@+id/teambscore"
            style="@style/ScoreTextView"
            android:text="0/0" />

        <Button
            style="@style/ScoreButtons"
            android:onClick="addSixForTeamB"
            android:text="+6 Runs" />

        <Button
            style="@style/ScoreButtons"
            android:onClick="addFourForTeamB"
            android:text="+4 Runs" />

        <Button
            style="@style/ScoreButtons"
            android:onClick="addOneForTeamB"
            android:text="+1 Runs" />

        <Button
            style="@style/ScoreButtons"
            android:onClick="addNoBallForTeamB"
            android:text="No Ball" />

        <Button
            style="@style/ScoreButtons"
            android:onClick="wicketForTeamB"
            android:text="Wicket" />
    </LinearLayout>
</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:onClick="resetButton"
        android:text="Reset"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</RelativeLayout>
